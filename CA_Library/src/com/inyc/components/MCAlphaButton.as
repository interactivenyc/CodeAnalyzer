package com.inyc.components
{
	public class MCAlphaButton extends MCButton
	{
		
		/************************************************************************************************
		 * Constructor
		 ************************************************************************************************/
		public function MCAlphaButton()
		{
			super();
		}
		
		/////////////////////////////////////////////////////////////////////////////////////////////////
		//External Functions
		/////////////////////////////////////////////////////////////////////////////////////////////////
		
		override protected function set downState(down:Boolean):void{
			super.downState = down;
			//log("set downState: "+down + ", "+this);
			if (down){
				alpha = .5;
			}else{
				alpha = 1;
			}
		}
		
		/////////////////////////////////////////////////////////////////////////////////////////////////
		//Internal Functions
		/////////////////////////////////////////////////////////////////////////////////////////////////
		
		
	}
}