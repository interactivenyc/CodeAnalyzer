package com.speakaboos.ipad.view.holders.components{	import com.speakaboos.ipad.events.ModalEvents;		import flash.display.MovieClip;	import flash.events.Event;	public class DialogButtonBase extends MCButton	{		protected var _buttonText:String;		public var bg:MovieClip;		public var callback:Function;				public static const BTN_SIZE_LARGE:String = "BTN_SIZE_LARGE";				public function DialogButtonBase(pMC:MovieClip, pButtonText:String = "", pCallback:Function = null)		{			super(pMC);			_buttonClickEvent = ModalEvents.DIALOG_BUTTON_CLICK;			_buttonText = pButtonText;			bg = mc.bg;			callback = pCallback;		}				public function get text():String{			return mc.textField.text;		}				public function get label():String{			return mc.textField.text;		}				public function set label(value:String):void{			_buttonText = value;			mc.textField.text = _buttonText;		}				public function setButtonSize(btn_size:String):void{			if (btn_size == BTN_SIZE_LARGE){				bg.gotoAndStop("large");				mc.textField.width = bg.width;			}		}				override protected function onAddedToStage(e:Event):void{			super.onAddedToStage(e);			//log(textField);			mc.textField.text = _buttonText;		}	}}