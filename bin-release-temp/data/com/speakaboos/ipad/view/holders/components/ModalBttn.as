package com.speakaboos.ipad.view.holders.components{	import flash.display.Bitmap;	import flash.display.MovieClip;	import flash.text.TextField;		public class ModalBttn extends MCButton	{		private var iconSpace:Number = 40;				public function ModalBttn(pButtonMC:MovieClip)		{			super(pButtonMC);		}		override public function setInfo(info:Object):void {			super.setInfo(info);			var id:String = info.id || mc.name;			if (id) mc.id = id; //TODO would rather put this in the holder, but it is not instiated yet...			if (mc.text) {				var fld:TextField = mc.text.label;				if (info.text) {					text = info.text;				}				if (info.icon && mc.icon) {					fld.x += iconSpace;					fld.width -= iconSpace;					mc.icon.addChild(new Bitmap(new info.icon()));				}			}		}				override public function destroy():void {			if (mc.icon) mc.icon.removeChildren();			super.destroy();		}	}}