package com.speakaboos.ipad.view.holders.components{	import com.speakaboos.ipad.utils.HtmlTextUtil;		import flash.display.MovieClip;		public class ModalTextBttn extends MCButton	{		public function ModalTextBttn(pButtonMC:MovieClip)		{			super(pButtonMC);		}		override public function setInfo(info:Object):void {			super.setInfo(info);			if (info.text) {				setBttnText(info.text);			}			var id:String = info.id || mc.name;			if (id) mc.id = id; //TODO would rather put this in the holder, but it is not instiated yet...		}		private function setBttnText(txt:String):void {			HtmlTextUtil.setFieldText(mc.label,  "<span class='textBttn'>"+txt+"</span>");		}	}}