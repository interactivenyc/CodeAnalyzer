package com.speakaboos.ipad.utils.debug {	import com.speakaboos.core.settings.AppConfig;
	import com.speakaboos.ipad.controller.ModalController;
	import com.speakaboos.ipad.utils.DateUtil;
	/**	 * @author stevewarren	 */	 	public class Logger {			private static var instance:Logger;		 		function Logger() {			 		}				public static function log(message:*, category:Array=null, tagEveryLine:Boolean=false):void {			//if (!AppConfig.DEBUG_MODE) return;						if (message==null) message="null";			if (instance == null) instance = new Logger();						if (message.toString() == "[object Object]") {				sendDump(message, category, tagEveryLine);			} else {				sendString(message, category, tagEveryLine);			}								}						public static function sendString(message:String, category:Array, tagEveryLine:Boolean=false):void {						//force removal of loading traces			if (message.indexOf("onSaveProgress") > -1 || message.indexOf("onWriteTimer") > -1) return;						if(tagEveryLine) message = tagLines(message,category);			trace(message);			if (AppConfig.DEBUG_MODE) ModalController.logMessage( message + "\r");					}		public static function sendDump(object:Object, category:Array, tagEveryLine:Boolean=false):void {			sendString(TraceObject.DUMP(object), category, tagEveryLine);		}				public static function tagLines(message:String,category:Array):String{			var messageArray:Array = message.split("\n");						var prefix:String = "[ "+category+" ] ";			//var prefix:String = "[ "+category+" " + DateUtil.getDecimalSeconds(new Date()) + " ] ";						message = prefix + messageArray.join("\n"+prefix);						return message;		}	}}